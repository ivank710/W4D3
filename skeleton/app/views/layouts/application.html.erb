<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <header>
      <h2>Current User: <%= current_user ? "#{current_user.user_name}" : "--None--" %></h2>
      <input type='Submit' value='<%= current_user ? "Log Out" : "Log In" %>'>
    </header>
    <%= yield %>
  </body>
</html>
